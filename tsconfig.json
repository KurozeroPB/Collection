{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "esnext",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "moduleResolution": "node",
        "declaration": true,
        "rootDir": "src",
        "outDir": "lib",
        "strict": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "lib",
        "**/*.test.ts",
        "**/webpack.config.ts"
    ]
}
